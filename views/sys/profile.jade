extends layouts/wide

block content
	.container
		.row
			.col-sm-6.col-sm-offset-3
				h3 Perfil do usuário
		.row
			.col-sm-6.col-sm-offset-3
				table
					tr
						th Nome
					tr
						td #{user.name}
					tr
						th Data de cadastro
					tr
						td #{user.timecreated}
					tr
						th Último acesso
					tr
						td #{user.timelastlogin}
					if user.selfprofile
						tr
							th Usuário
						tr
							td #{user.username}
						
							tr
								th Senha
							tr
								th Email cadastrado
							tr
								td #{user.email}
							tr
								td
									a(data-toggle="collapse", href="#changePw", aria-expanded="false", aria-controls="changePw") Alterar
						tr.collapse#changePw
							td
								form(method="POST", action="/user/reset")
									table
										tr
											td
												label Antiga senha
												input.form-control(type="password", placeholder="Digite aqui", name="pw_old", required="required", size="20")
										tr
											td
												label Nova senha
												input.form-control(type="password", placeholder="Digite aqui", name="pw_new", required="required", size="20")
											td
												button.btn.btn-primary.btn-sm.pull-right(type="submit")
													i.fa.fa-sign-in