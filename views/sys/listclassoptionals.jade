.row
 .col-sm-4
 .col-sm-4
  ..form-control
   input.form-control#searchinput(type="search", placeholder="Digite um termo e pressione ENTER", name="searchcontents", [value]="", title="", (keyup.enter)="search()", [(ngModel)]="query_search")
 .col-sm-4
.row
 .col-sm-12
  section(*ngIf='result_search != null && result_search.length > 0')
   i.text-muted {{ result_search.length }} Resultados para {{ query_search_last }}
   ul
    li(*ngFor="#item of result_search")
     {{ item.title }}
     a.text-primary(href="{{ item.url }}", target="_blank") (...)
  section(*ngIf='result_search != null && result_search.length == 0')
   i.text-danger Nenhum resultado para {{ query_search_last }}
.row
  .section-title.col-sm-12
   h4 Aulas Opcionais
.row
  .col-sm-4
  .col-sm-4
    .panel
     .panel-heading
      h4 Aulas Opcionais
     .mdl-card__supporting-text
      small Aulas Opcionais
     .mdl-card__actions.mdl-card--border
      table(width="100%")
       tr(*ngFor="#copt of list_course.classoptional", (click)="toggleBind(copt, 1)", [class.box-selected]="copt.subs === true", [class.box-available]="copt.subs !== true")
        th
         i.mdi.mdi-arrow-right-bold-circle-outline.mdi-2x(title="Clique para se inscrever.", *ngIf="!copt.subs", [class.hide]="copt.subs === true")
         i.mdi.mdi-checkbox-marked-circle-outline.mdi-2x.link-bound(title="JÃ¡ inscrito. Clique novamente para desfazer.", *ngIf="copt.subs === true", [class.hide]="copt.subs === false")
        td
         strong {{ copt.title }}
         br
         small {{ copt.timecreated }}